
 <odoo> 
    
    <record id ="estate_property_action" model="ir.actions.act_window">
    <field name="name">property</field>
    <field name="res_model">estate.property</field>
    <field name ="view_mode">tree,form</field>
    </record> 
 
    <menuitem id="estate_menu_root" name="Estate"/>
<menuitem 
        id="estate_property_menu" 
        name="setting" 
        parent="estate.estate_menu_root"
        action="estate_property_action"/>
 <menuitem 
        id="estate_property_menu_action" 
        name="property type"
        parent="estate.estate_property_menu" 
        action="estate_property_type_action"/>
    <!--  affichage en liste dans  /--> 
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
        <tree string="property">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>
     <!--  affichager en forme pour etdie ou pour creeate  /--> 
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
           <form string="estateproperty">
                <sheet>
                    <group>                   
                        <group>
                            <field name="name"/> 
                        </group> 
                        <group>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                            <field name="best_price" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>   
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                            
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>  
                                <field  name="total_areas"/>  
                                 
                                <field  name="state"/>
                                <field  name="status"/>
                                <field name="property_type_id"/>     
                                <field  name ="tag_ids" widget="Many2many_tags"/>   
                                        
                            </group>
                        
                        </page>
                       <page string="Offers">
                          <field name="offer_ids">
                          <tree editable="bottom">
                         <field name="price"/>
                         <field  name ="validity"/>
                         <field  name ="date_deadline"/>
                         <field name="partner_id"/>
                         <field name="status"/>
                         
                                </tree>
                            </field>
                        </page>
                        <page name="onther info">
                            <group>
                                 
                                 <field name="Salesperson_id" />
                                 <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="view_estate_property_search" model="ir.ui.view">
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <search string="Estate Property">
            <field name="name" string="Property"/>
            <field name="postcode" string="postcode"/>
            <field name="expected_price" string="expected_price"/>
            <field name="bedrooms" string="bedrooms"/>
            <field name="living_area" string="living_area"/>
            <field name="facades" string="facades"/>
            <separator/>
            <!-- Filtre sur le statut -->
            <filter string="New" name="new" domain="[('status', '=', 'new')]"/>
            <filter string="Offer Received" name="offer_received" domain="[('status', '=', 'offer_received')]"/>
            <group expand="0" string="Group By">
                <filter string="postcode" name="group_by_postcode" context="{'group_by':'postcode'}"/>
            </group>
        </search>
    </field>
</record>

</odoo>
